{
  "Description": "Create user and policy that has the least privilege necessary to perform lightswitch actions",
  "Resources": {
    "lightswitch": {
      "Type": "AWS::IAM::User"
    },
    "lightswitchPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "lightswitch-policy",
        "Users": [{
          "Ref": "lightswitch"
        }],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
            "Action": [
              "ec2:CreateTags",
              "ec2:DescribeInstanceStatus",
              "ec2:DescribeInstances",
              "ec2:StartInstances",
              "ec2:StopInstances"
            ],
            "Resource": [{
              "Fn::Join": [":", ["arn:aws:ec2:*", {
                "Ref": "AWS::AccountId"
              }, "*"]]
            }]
          }]
        }
      }
    }
  }
}
